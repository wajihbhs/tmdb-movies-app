{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "jsx": "preserve",
    "esModuleInterop": true,
    "types": ["vite/client"]
  },
  "include": [
    "components/**/*",
    "composables/**/*",
    "layouts/**/*",
    "pages/**/*",
    "plugins/**/*",
    "types/**/*",
    "validations/**/*",
    "tests/**/*",
    "tests/unit/**/*",
    "tests/e2e/**/*",
    "app.vue"
  ]
}
